@model Capsules

@* create in admin *@

<div class="container-fluid bg-light mt-3 animate__animated  animate__fadeIn">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <div class="layout-spacing">
                <div class="d-md-flex justify-content-center">
                    <h4 class="mb-0 pt-4 ps-2">Add New Capsule</h4>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="successMessage" class="alert alert-info">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <div class="row">
                    <div class="col-lg-8 mt-4">
                        <div class="card border-0 p-4 rounded shadow">
                            <div class="row">
                                <div class="col-md-4 mt-4">
                                    <img src="~/libs/images/cap11.jpg" class="avatar avatar-md-md rounded-pill shadow mx-auto d-block" style="width: 150px; height: 150px;" alt="">
                                </div>
                                <!--end col-->

                                <div class="col-md-8 mt-4 mt-sm-0 pt-4">
                                    <h5 class="">What Is A Capsule?</h5>
                                    <p class="text-muted mb-0">
                                        A solid pharmaceutical dosage form that contains a medicinal agent within either a hard or soft soluble container or shell.
                                        They are used by manufacturers when the drug cannot be compacted into a solid tablet.
                                    </p>
                                </div> <!--end col-->
                            </div><!--end row-->

                            <form class="pt-5" id="capsuleForm" asp-action="Create" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CapName" class="form-label">Capsule Name</label>
                                            <input asp-for="CapName"  type="text" class="form-control" placeholder="Name :">
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Output" class="form-label">Capsule Output</label>
                                            <input asp-for="Output"  type="text" class="form-control" placeholder="Output :">
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CapSize" class="form-label">Capsule Size</label>
                                            <input asp-for="CapSize"  type="text" class="form-control" placeholder="Size :">
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MachDim" class="form-label">Machine Dimension</label>
                                            <input asp-for="MachDim"  type="text" class="form-control" placeholder="Dimension :">
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="ShipWeight" class="form-label">Shipment Weight Of Capsules</label>
                                            <input asp-for="ShipWeight" type="text" class="form-control start" placeholder="Weight :">
                                        </div>
                                    </div><!--end col-->

                                </div><!--end row-->

                                <button type="submit" class="btn btn-primary">Add Capsule</button>
                            </form>
                        </div>
                    </div><!--end col-->

                    <div class="col-lg-4 mt-4">
                        <div class="card rounded border-0 shadow">
                            <div class="p-4 border-bottom">
                                <h5 class="mb-0">Some Most Popular Tablets List</h5>
                            </div>

                            <ul class="list-unstyled mb-0 p-4" data-simplebar style="height: 629px;">
                                <li class="d-md-flex align-items-center text-center text-md-start">
                                    <img src="../libs/images/cap1.jpg" class="avatar avatar-medium rounded-md shadow" alt="">
                                    <div class="ms-md-3 mt-4 mt-sm-0">
                                        <a href="#" class="text-dark h6">Omeprazole</a>
                                        <p class="text-muted my-1">Drug</p>
                                        <p class="text-muted mb-0">Treat Gastroesophageal Disease</p>
                                    </div>
                                </li>

                                <li class="d-md-flex align-items-center text-center text-md-start mt-4">
                                    <img src="../libs/images/cap2.jpeg" class="avatar avatar-medium rounded-md shadow" alt="">
                                    <div class="ms-md-3 mt-4 mt-sm-0">
                                        <a href="#" class="text-dark h6">Doxycycline</a>
                                        <p class="text-muted my-1">Antibiotic</p>
                                        <p class="text-muted mb-0">Treat Respiratory Infections and Acne</p>
                                    </div>
                                </li>

                                <li class="d-md-flex align-items-center text-center text-md-start mt-4">
                                    <img src="../libs/images/cap3.webp" class="avatar avatar-medium rounded-md shadow" alt="">
                                    <div class="ms-md-3 mt-4 mt-sm-0">
                                        <a href="#" class="text-dark h6">Fluoxetine</a>
                                        <p class="text-muted my-1">Antidepressant</p>
                                        <p class="text-muted mb-0">Treat Depression, OCD</p>
                                    </div>
                                </li>

                                <li class="d-md-flex align-items-center text-center text-md-start mt-4">
                                    <img src="../libs/images/cap4.webp" class="avatar avatar-medium rounded-md shadow" alt="">
                                    <div class="ms-md-3 mt-4 mt-sm-0">
                                        <a href="#" class="text-dark h6">Prednisone</a>
                                        <p class="text-muted my-1">Corticosteroid</p>
                                        <p class="text-muted mb-0">Treat Allergies, Asthma</p>
                                    </div>
                                </li>

                                <li class="d-md-flex align-items-center text-center text-md-start mt-4">
                                    <img src="../libs/images/cap5.jpg" class="avatar avatar-medium rounded-md shadow" alt="">
                                    <div class="ms-md-3 mt-4 mt-sm-0">
                                        <a href="#" class="text-dark h6">Clindamycin</a>
                                        <p class="text-muted my-1">Antibiotic</p>
                                        <p class="text-muted mb-0">Treat Female Reproductive Organs</p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div><!--end row-->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Ensure jQuery is included -->
    <script>
        $(document).ready(function () {
            if ($('#successMessage').length) {
                $('#successMessage').fadeIn('slow').delay(1000).fadeOut('slow');
            }
        });
    </script>
}
                                        <input asp-for="CompName" class="form-control text-center" placeholder="Company :">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3 text-center">
                                        <label asp-for="weight" class="form-label">Medicine Weight <span class="text-danger">*</span></label>
                                        <input asp-for="weight" class="form-control text-center" placeholder="Weight :">
                                    </div>
                                </div>
                            </div><!--end col-->



                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3 text-center">
                                        <label asp-for="Name" class="form-label">Medicine Name <span class="text-danger">*</span></label>
                                        <input asp-for="Name" class="form-control text-center" placeholder="Name :">
                                    </div>
                                </div><!--end col-->
                                <div class="col-md-6">
                                    <div class="mb-3 text-center">
                                        <label asp-for="size" class="form-label">Medicine Size <span class="text-danger">*</span></label>
                                        <input asp-for="size" class="form-control text-center" placeholder="Size :">
                                    </div>
                                </div>
                            </div>



                            <div class="row mt-4 mb-3">
                                <div class="col-sm-12 d-flex justify-content-center align-items-center mb-2">
                                    <button type="submit" id="submit" name="send" class="btn btn-primary">Place Your Order</button>
                                </div><!--end col-->
                            </div>

                        </form>
                    </div><!--end col-->

@model Users


@* signup for new users *@

<body class="w-100" style="background: url('../assets2/images/pharma.jpg') center; background-repeat:no-repeat; background-size:cover;">
    <!-- Applied bg-light to the body -->


    <div class="container  animate__animated animate__slideInDown">
        <div class="row justify-content-end">
            <div class="col-md-7"></div>
                <div class="col-md-5">
                    <div class="card login-page shadow rounded border-0 mt-5">
                        <!-- Added mt-5 for some top margin -->
                        <div class="card-body">
                            <h2 class="text-center">Sign Up</h2>
                            <form asp-action="Signup" method="post" class="login-form mt-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CompanyName" class="form-label">Company Name : <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" placeholder="Company Name" asp-for="CompanyName"  required="">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label asp-for="Username" class="form-label">UserName : <span class="text-danger">*</span></label>
                                            <input asp-for="Username" type="text" class="form-control" placeholder="User Name" required="">
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label asp-for="Password" class="form-label">Password <span class="text-danger">*</span></label>
                                            <input asp-for="Password" type="password" class="form-control" placeholder="password" required="">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    
                                    <div class="col-md-12">
                                        <div class="d-grid">
                                            <button type="submit"  class="btn btn-primary">Register</button>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 mt-3 text-center">
                                        <h6 class="text-muted">Or</h6>
                                    </div><!--end col-->

                                    <div class="col-6 mt-3">
                                        <div class="d-grid">
                                        <a href="@Url.Action("ExternalLogin", "Main", new { provider = "Facebook", returnUrl = "/" })" class="btn btn-soft-primary">
                                            <i class="uil uil-facebook"></i> Facebook
                                        </a>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-6 mt-3">
                                        <div class="d-grid">

                                        <a href="@Url.Action("ExternalLogin", "Main", new { provider = "Google", returnUrl = "/" })" class="btn btn-soft-primary"><i class="uil uil-google"></i> Google</a>
                                        </div>
                                    </div><!--end col-->
                                </div>
                            </form>
                        </div>
                    </div><!---->
                </div> <!--end col-->
            </div><!--end row-->
        </div> <!--end container-->
    </section><!--end section-->

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
